#!/bin/sh

prefix='//'
while getopts p: o; do
      case "$o" in
        p) prefix="$OPTARG" ;;
        \?) echo "Invalid option: -$OPTARG" >&2 ;;
    esac
done
shift `expr $OPTIND - 1`

fmt=fmt
if which gfmt >/dev/null; then
        fmt=gfmt
fi
exec $fmt -c -w80 -p"$prefix" "$@" | sed -e "\,^\s*$prefix,s,\.  ,\. ,g"
